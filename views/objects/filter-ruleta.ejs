<form class="baseFilter">

    <section class="baseFilter__wrapper baseFilter__wrapper--left">
        <fieldset class="baseFilter__wrapper-cruppier" data-filter-group>
            <button type="reset" id="ruleta-all">Todos</button>
            <button data-toggle=".cruppier">Con Cruppier</button>
            <button data-toggle=".noCruppier">Sin Cruppier</button>
        </fieldset>

        <fieldset data-filter-group>
            <select name="cruppier" id="ruleta-cruppier">
                <option value="" disabled selected hidden>
                    <span>Tipo</span>
                    <img src="img/icons/icon-arrow-down.svg" alt="">
                </option>
                <option value="all">Todos</option>
                <option value=".cruppier">Con Cruppier</option>
                <option value=".noCruppier">Sin Cruppier</option>
            </select>
        </fieldset>

        <fieldset data-filter-group>
            <select name="provider" id="ruleta-provider">
                <option value="" disabled selected hidden>
                    <span>Proveedor</span>
                    <img src="img/icons/icon-arrow-down.svg" alt="">
                </option>
                <option value="all">Todos</option>
                <option value=".proveedor-uno">One</option>
                <option value=".proveedor-dos">Two</option>
                <option value=".proveedor-tres">Three</option>
            </select>
        </fieldset>

        <fieldset data-filter-group>
            <button id="base-fav" data-toggle=".favorito">
                <svg xmlns="http://www.w3.org/2000/svg" width="18.185" height="15.565"><path data-name="Trazado 99" d="M17.967 3.763A5.194 5.194 0 0 0 14.276.089a5.414 5.414 0 0 0-4.97 1.674.325.325 0 0 1-.441 0A5.414 5.414 0 0 0 3.892.088 5.194 5.194 0 0 0 .205 3.763a5.064 5.064 0 0 0 1.3 5.025l7.167 6.609a.662.662 0 0 0 .883 0l7.18-6.635a5.025 5.025 0 0 0 1.232-4.999Z" fill="#3b424b"/></svg>
                <span>Favoritos</span>
            </button>
        </fieldset>
    </section>

    <section class="baseFilter__wrapper baseFilter__wrapper--right">
        <button class="btn__gray--red" type="reset" id="reset">
            <span>Eliminar filtros</span>
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18"><path d="M9 18a9 9 0 1 0-9-9 9 9 0 0 0 9 9ZM5.287 6.345a.75.75 0 0 1 1.058-1.058l2.52 2.52a.187.187 0 0 0 .265 0l2.52-2.52a.761.761 0 1 1 1.1 1.058l-2.52 2.52a.187.187 0 0 0 0 .265l2.52 2.52a.75.75 0 0 1 .035 1.06l-.035.035a.752.752 0 0 1-1.057 0l-2.52-2.52a.187.187 0 0 0-.265 0L6.345 12.75a.748.748 0 1 1-1.058-1.057l2.52-2.52a.187.187 0 0 0 0-.265Z" fill="#ff293e"/></svg>
        </button>
        <p class="is-showing">Mostrando <span></span> juegos</p>
    </section>

</form>