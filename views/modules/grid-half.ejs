<section class="m-grid__half">
    <nav class="o-grid__half--navbar">
        <div class="o-grid__half--wrapper">
            <img src="img/icon-grid-arrow.svg" alt="" class="js-arrow__grid">
            <div class="c-icon__title">
                <img src="img/<%- data.icon %>.svg" alt="">
                <p class="u-f--bold u-f--h4">
                    <%- data.title %>
                </p>
            </div>
        </div>
        <a href="<%- data.link %>">
            <div class="o-grid__half--wrapper">
                <p class="u-f--bold u-f--h5">VER TODAS</p>
                <img src="img/icon-arrow-red.svg" alt="">
            </div>
        </a>
    </nav>
    <div class="o-grid__half--grid active">
        <% data.grid.forEach( item => { %>
            <div class="o-grid__half--item">
                <img src="img/<%- item.img %>.jpg" alt="">
            </div>
        <% }) %>
    </div>
</section>